###############################################################################
# Set default behavior to automatically normalize line endings.
###############################################################################
* whitespace=indent-with-non-tab,trailing-space,space-before-tab,tabwidth=4
* encoding=UTF-8
* text=auto eol=lf

# Shell scripts should always have lf line endings
*.sh text eol=lf

# Markdown files
*.md text

# Rust
*.rs       text diff=rust eol=lf whitespace=indent-with-non-tab,trailing-space,tabwidth=4
*.toml     text diff=toml
Cargo.lock text
*.fixed    linguist-language=Rust

# C/C++
*.c     text diff=cpp
*.cc    text diff=cpp
*.cxx   text diff=cpp
*.cpp   text diff=cpp
*.c++   text diff=cpp
*.hpp   text diff=cpp
*.h     text diff=cpp
*.h++   text diff=cpp
*.hh    text diff=cpp

# Serialization
*.json  text whitespace=indent-with-non-tab,trailing-space,space-before-tab,tabwidth=2
*.toml  text whitespace=indent-with-non-tab,trailing-space,space-before-tab,tabwidth=2
*.xml   text whitespace=indent-with-non-tab,trailing-space,space-before-tab,tabwidth=2
*.yaml  text whitespace=indent-with-non-tab,trailing-space,space-before-tab,tabwidth=2
*.yml   text whitespace=indent-with-non-tab,trailing-space,space-before-tab,tabwidth=2

# Scripts
*.bash  text eol=lf
*.fish  text eol=lf
*.sh    text eol=lf
*.zsh   text eol=lf
*.bat   text eol=crlf
*.cmd   text eol=crlf
*.ps1   text eol=crlf

# Graphics
*.png   binary
*.jpg   binary
*.jpeg  binary
*.gif   binary
*.tif   binary
*.tiff  binary
*.ico   binary
*.svg   text
*.eps   binary

# Archives
*.7z    binary
*.gz    binary
*.tar   binary
*.tgz   binary
*.zip   binary

# Text files where line endings should be preserved
*.patch -text

# Compiled Object files
*.slo   binary
*.lo    binary
*.o     binary
*.obj   binary

# Precompiled Headers
*.gch   binary
*.pch   binary

# Compiled Dynamic libraries
*.so    binary
*.dylib binary
*.dll   binary

# Compiled Static libraries
*.lai   binary
*.la    binary
*.a     binary
*.lib   binary

# Executables
*.exe   binary
*.out   binary
*.app   binary

.gitattributes export-ignore
.gitignore     export-ignore
.gitkeep       export-ignore
